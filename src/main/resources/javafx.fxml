<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane alignment="center" hgap="10" prefHeight="300.0" prefWidth="400.0" vgap="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="calculator.SmokingCostController">
    <Label prefHeight="22.0" prefWidth="102.0" text="Cigarettes Per Day:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="cigarettesPerDayField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <Label text="Cigarettes Per Pack:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="cigarettesPerPackField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Label text="Pack Price:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="packPriceField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Button onAction="#handleCalculate" prefHeight="26.0" prefWidth="125.0" text="Calculate" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Button fx:id="saveToJsonButton" onAction="#handleSave" prefHeight="26.0" prefWidth="125.0" text="Save to JSON" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <Button fx:id="loadFromJsonButton" onAction="#handleLoad" prefHeight="26.0" prefWidth="125.0" text="Load from JSON" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label fx:id="resultLabel" GridPane.columnIndex="1" GridPane.rowIndex="5" textAlignment="CENTER" />
</GridPane>
